<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"payment-service"}</customFields>
        </encoder>
    </appender>
    
    <!-- Splunk HTTP Event Collector Appender -->
    <appender name="SPLUNK" class="com.splunk.logging.SplunkCimLogbackAppender">
        <layout class="com.splunk.logging.SplunkCimLayout">
            <facility>payment-service</facility>
            <includeLoggerName>true</includeLoggerName>
            <includeThreadName>true</includeThreadName>
        </layout>
        <hecUrl>http://${SPLUNK_HOST:splunk}:${SPLUNK_PORT:8088}</hecUrl>
        <hecToken>${SPLUNK_TOKEN}</hecToken>
        <disableCertificateValidation>true</disableCertificateValidation>
    </appender>
    
    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/payment-service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/payment-service.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"payment-service"}</customFields>
        </encoder>
    </appender>
    
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SPLUNK"/>
        <appender-ref ref="FILE"/>
    </root>
    
    <logger name="com.fintech" level="DEBUG"/>
    <logger name="org.springframework.web" level="DEBUG"/>
</configuration>
