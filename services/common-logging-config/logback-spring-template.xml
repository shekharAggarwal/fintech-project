<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Service-specific variables -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="unknown-service"/>
    <property name="SERVICE_NAME" value="${SERVICE_NAME:-${APP_NAME}}"/>
    <property name="ENVIRONMENT" value="${ENVIRONMENT:-development}"/>

    <!-- Async appender for non-blocking SPLUNK logging -->
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="SPLUNK"/>
    </appender>

    <!-- Development/Local profile -->
    <springProfile name="local,dev">
        <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

        <!-- Console Appender -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- Splunk HEC Appender -->
        <appender name="SPLUNK" class="com.splunk.logging.HttpEventCollectorLogbackAppender">
            <url>http://localhost:8088</url>
            <token>fintech-hec-token-2024</token>
            <index>fintech</index>
            <source>${SERVICE_NAME}</source>
            <sourcetype>spring-boot-json</sourcetype>
            <disableCertificateValidation>true</disableCertificateValidation>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC"/>
        </root>

        <logger name="com.fintech" level="DEBUG"/>
        <logger name="io.github.resilience4j" level="DEBUG"/>
    </springProfile>

    <!-- Production profile -->
    <springProfile name="!local,!dev">
        <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

        <!-- Console Appender -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- Splunk HEC Appender with JSON layout -->
        <appender name="SPLUNK" class="com.splunk.logging.HttpEventCollectorLogbackAppender">
            <url>${SPLUNK_HEC_URL:-http://localhost:8088}</url>
            <token>${SPLUNK_HEC_TOKEN:-fintech-hec-token-2024}</token>
            <index>fintech</index>
            <source>${SERVICE_NAME}</source>
            <sourcetype>spring-boot-json</sourcetype>
            <disableCertificateValidation>true</disableCertificateValidation>
            <layout class="net.logstash.logback.layout.LoggingEventCompositeJsonLayout">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <mdc/>
                    <message/>
                    <stackTrace/>
                    <pattern>
                        <pattern>
                            {
                            "traceId": "%X{traceId:-}",
                            "spanId": "%X{spanId:-}",
                            "service": "${SERVICE_NAME}",
                            "environment": "${ENVIRONMENT}",
                            "host": "${HOSTNAME:-unknown}",
                            "thread": "%thread",
                            "application": "fintech-microservices"
                            }
                        </pattern>
                    </pattern>
                </providers>
            </layout>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC"/>
        </root>

        <!-- Service-specific loggers -->
        <logger name="com.fintech" level="DEBUG"/>
        <logger name="io.github.resilience4j" level="INFO"/>
        <logger name="org.springframework.web" level="INFO"/>
        <logger name="org.springframework.amqp" level="INFO"/>
        <logger name="org.springframework.data" level="INFO"/>
        <logger name="org.springframework.security" level="DEBUG"/>
    </springProfile>
</configuration>
